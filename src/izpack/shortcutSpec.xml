<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="Akiban" location="applications"/>
    <shortcut
        name="Akiban Server"
        target="$INSTALL_PATH\bin\akserver.cmd"
        iconFile="$INSTALL_PATH\bin\Akiban_Server.ico"
        iconIndex="0"
        commandLine="window"
        workingDirectory="$INSTALL_PATH"
        description="Run the server as an application"
        initialState="noShow"
        programGroup="yes" >
        <createForPack name="Server" />
    </shortcut>
    <shortcut
        name="Start Service"
        target="$INSTALL_PATH\bin\akserver.cmd"
        commandLine="start"
        workingDirectory="$INSTALL_PATH"
        description="Start Windows service"
        initialState="normal"
        programGroup="yes" >
        <createForPack name="Server" />
    </shortcut>
    <shortcut
        name="Stop Service"
        target="$INSTALL_PATH\bin\akserver.cmd"
        commandLine="stop"
        workingDirectory="$INSTALL_PATH"
        description="Stop Windows service"
        initialState="normal"
        programGroup="yes" >
        <createForPack name="Server" />
    </shortcut>
    <shortcut
        name="Monitor Service"
        target="$INSTALL_PATH\bin\akserver.cmd"
        commandLine="monitor"
        workingDirectory="$INSTALL_PATH"
        description="Start tray icon monitor for Windows service"
        initialState="noShow"
        programGroup="yes" >
        <createForPack name="Server" />
    </shortcut>
    <shortcut
        name="Uninstall"
        target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
        commandLine=""
        description="Uninstall this program"
        initialState="normal"
        programGroup="yes" >
        <createForPack name="Server" />
    </shortcut>
</shortcuts>
