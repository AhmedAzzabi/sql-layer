function _register(registrar) {
    registrar.register(
        "method=GET path=cnames function=customerNames in=(QP:prefix String required) out=String");
    registrar.register(
        "method=PUT path=cadd/(\\\\d+) function=addCustomer in=(PP:cid int required, JSON:name string required) out=void");
    registrar.register(
        "method=POST path=cchange function=changeCustomerName in=(JSON:cid int required, JSON:name string required) out=void");
};

function customerNames(s) {
    var result = s;
    var extent = Packages.com.akiban.direct.Direct.context.extent;
    
    for (customer in Iterator(extent.customers)) {
      result += "," + customer.name;
    }
    customer.name = "Changed";
    java.lang.System.out.println("customer.name=" + customer.name);
    return result;
}

function addCustomer(cid, name) {
    var extent = Packages.com.akiban.direct.Direct.context.extent;
    var customer = extend.customers.newInstance();
    customer.cid = cid;
    customer.name = name;
    customer.save();
}

function changeCustomerName(cid, name) {
    var extent = Packages.com.akiban.direct.Direct.context.extent;
    var customer = extend.customers.getCustomer(cid);
    customer.setName(name);
    customer.save();
}
    

